@model List<GraniteHouse.Models.Products>
@{
    ViewData["Title"] = "Home Page";
}
<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="m-0 font-weight-normal">
                        <label style="font-size: 20px;">@product.Name</label>
                    </h4>
                </div>

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <img class="card-img-top" style="height: 230px;" src="@product.Image" alt="Card Image" />
                    </div>
                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label><strong>@product.Price</strong> €</label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-outline-info rounded float-right">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

