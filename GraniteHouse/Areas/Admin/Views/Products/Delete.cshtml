@model GraniteHouse.Models.ViewModel.ProductsViewModel
@using GraniteHouse.Extensions
@{
    ViewData["Title"] = "Delete";
}
<br />
<h2>Delete Product </h2>
<hr />

<div class="p-4 border rounded row">
    <form method="post" class="col-12 row">
        <input hidden asp-for="Products.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Name">Name:</label>
                </div>
                <div class="col-8 form-control">
                    @Html.DisplayFor(model => model.Products.Name)
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price">Price:</label>
                </div>
                <div class="col-8 form-control">
                    @Html.DisplayFor(model => model.Products.Price)
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Image">Image:</label>
                </div>
                <div class="col-8">
                    <input name="files" type="file" disabled class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypes">Product Type:</label>
                </div>
                <div class="col-8 form-control">
                    @Html.DisplayFor(model => model.Products.ProductTypes.Name)
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SpecialTags">Special Tag:</label>
                </div>
                <div class="col-8 form-control">
                    @Html.DisplayFor(model => model.Products.SpecialTags.Name)
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ShadeColor">Colour:</label>
                </div>
                <div class="col-8 form-control">
                    @Html.DisplayFor(model => model.Products.ShadeColor)
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Available">Available:</label>
                </div>
                <div class="col-8">
                    @Html.DisplayFor(model => model.Products.Available)
                </div>
            </div>

        </div>

        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.Products.Image" style="border: 1px solid #bbb9bb; width: 100%; border-radius: 2px;" />
        </div>

        <br />

        <div class="form-group">
            <input type="submit" class="btn btn-outline-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-outline-success">Back to List</a>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

