@model GraniteHouse.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Delete User @Model.Name </h2>
<hr />

<div class="p-4 border rounded row">
    <form method="post" class="col-12 row">
        <input hidden asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" readonly class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger" />
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="PhoneNumber" readonly class="form-control" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-outline-success" value="Enable" />
            <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

