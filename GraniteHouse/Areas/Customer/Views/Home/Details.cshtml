@model GraniteHouse.Models.Products;
@using Microsoft.AspNetCore.Http;
@using GraniteHouse.Extensions;

@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Details";
}
<br />
<h2>Product Details </h2>
<hr />

<div class="p-4 border rounded row">
    <form method="post" class="col-12 row">
        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypes"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductTypes.Name" class="form-control" readonly />
                </div>
            </div>

            @if (!Model.SpecialTags.Name.Equals("--None--"))
            {
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SpecialTags"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SpecialTags.Name" class="form-control" readonly />
                    </div>
                </div>
            }

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ShadeColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ShadeColor" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                </div>
                <div class="col-8">
                    @{
                        bool isInBag = false;
                        List<int> listCart = HttpContextAccessor.HttpContext.Session.Get<List<int>>("ssShoppingCart");
                        if (listCart != null && listCart.Contains(Model.Id))
                        {
                            isInBag = true;
                        }
                    }
                    @if (isInBag)
                    {
                        <button type="submit" value="Remove from Cart" asp-action="Remove" asp-route-id="@Model.Id" class="btn btn-danger form-control">Remove From Cart</button>
                    }
                    else
                    {
                        <button type="submit" value="Add To Cart" asp-route-id="@Model.Id" class="btn btn-primary form-control">Add To Cart</button>
                    }
                </div>
            </div>

        </div>

        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.Image" style="border: 1px solid #bbb9bb; width: 100%; border-radius: 2px;" />
            <br /> <br />
            @if (Model.Available)
            {
                <img src="" style="width:50%;" />
            }
        </div>
        <br />

    </form>

    <div class="form-control border-0">
        <input hidden asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-success">Back To List</a>
    </div>
</div>