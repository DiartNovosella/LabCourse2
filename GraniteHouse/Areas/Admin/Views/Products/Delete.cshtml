@model GraniteHouse.Models.ViewModel.ProductsViewModel
@using GraniteHouse.Extensions
@{
    ViewData["Title"] = "Delete";
}
<br />
<h2>Delete Product </h2>
<hr />

<div class="p-4 border rounded row">
    <form method="post" class="col-12 row">
        <input hidden asp-for="Products.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Name" readonly class="form-control" />
                </div>
                <span asp-validation-for="Products.Name" class="text-danger" />
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" readonly class="form-control" />
                </div>
                <span asp-validation-for="Products.Price" class="text-danger" />
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypes"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ProductTypes.Name" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SpecialTags"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.SpecialTags.Name" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ShadeColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ShadeColor" readonly class="form-control" />
                </div>
                <span asp-validation-for="Products.ShadeColor" class="text-danger" />
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Available"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Available" disabled class="form-control"/>
                </div>
                <span asp-validation-for="Products.Available"  class="text-danger" />
            </div>

        </div>

        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.Products.Image" style="border: 1px solid #bbb9bb; width: 100%; border-radius: 2px;" />
        </div>

        <br />

        <div class="form-group">
            <input type="submit" class="btn btn-outline-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-outline-success">Back to List</a>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

