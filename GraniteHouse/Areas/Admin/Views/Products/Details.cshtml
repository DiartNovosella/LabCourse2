@model GraniteHouse.Models.ViewModel.ProductsViewModel
@using GraniteHouse.Extensions
@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Product  Details</h2>
<hr />

<div class="p-4 border rounded row">

    <div class="col-8">

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Name" disabled class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Price"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Price" disabled class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Image"></label>
            </div>
            <div class="col-8">
                <input name="files" type="file" disabled class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ProductTypes"></label>
            </div>
            <div class="col-8">
                <select asp-for="@Model.Products.ProductTypeId" asp-items="Model.ProductTypes.ToSelectListItem(Model.Products.ProductTypeId)" disabled class="form-control"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="SpecialTags"></label>
            </div>
            <div class="col-8">
                <select asp-for="@Model.Products.SpecialTagsId" asp-items="Model.SpecialTags.ToSelectListItem(Model.Products.SpecialTagsId)" disabled class="form-control"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.ShadeColor"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.ShadeColor" disabled class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Products.Available"></label>
            </div>
            <div class="col-8">
                <input asp-for="Products.Available" disabled/>
            </div>
        </div>

    </div>

    <div class="col-1"></div>
    <div class="col-3">
        <img src="@Model.Products.Image" style="border: 1px solid #bbb9bb; width: 100%; border-radius: 2px;" />
    </div>
    <br />

    <div class="form-group">
        <a asp-action="Edit"  asp-route-id="@Model.Products.Id" class="btn btn-outline-primary">Edit</a>
        <a asp-action="Index" class="btn btn-outline-success">Back to List</a>
    </div>
</div>
